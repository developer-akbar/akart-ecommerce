<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Add Product"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximizede="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter heading of the section"
                                                fieldLabel="Heading"
                                                name="./heading"/>
                                            <fielddetails
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldLabel="Product Field Details">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./productFields">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <fielddetails
                                                            jcr:primaryType="nt:unstructured"
                                                            jcr:title="Product Fields"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <fieldgroupname
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="Enter name of field group"
                                                                    fieldLabel="Fields Group Name"
                                                                    name="./fieldGroupName"/>
                                                                <fielddetails
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                    composite="{Boolean}true"
                                                                    fieldLabel="Product Field Details">
                                                                    <field
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                        name="./fieldDetails">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <column
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                                                margin="{Boolean}true">
                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                    <fielddetails
                                                                                        jcr:primaryType="nt:unstructured"
                                                                                        jcr:title="Product Fields"
                                                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                                        <items jcr:primaryType="nt:unstructured">
                                                                                            <label
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                                fieldDescription="Enter product field label"
                                                                                                fieldLabel="Product Field Label"
                                                                                                name="./fieldLabel"/>
                                                                                            <name
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                                fieldDescription="Enter form field name"
                                                                                                fieldLabel="Form Field Name"
                                                                                                name="./fieldName"/>
                                                                                            <fieldtype
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                                                fieldDescription="Choose type of form field"
                                                                                                fieldLabel="Form Field Type"
                                                                                                name="./fieldType">
                                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                                    <textbox
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        text="Textbox"
                                                                                                        value="text"/>
                                                                                                    <checkbox
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        text="Checkbox"
                                                                                                        value="checbox"/>
                                                                                                    <radio
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        text="Radio"
                                                                                                        value="radio"/>
                                                                                                    <dropdown
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        text="Dropdown"
                                                                                                        value="dropdown"/>
                                                                                                    <mutlitdropdown
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        text="Multi Select"
                                                                                                        value="mutli-select"/>
                                                                                                    <textarea
                                                                                                        jcr:primaryType="nt:unstructured"
                                                                                                        text="Textarea"
                                                                                                        value="textarea"/>
                                                                                                </items>
                                                                                            </fieldtype>
                                                                                        </items>
                                                                                    </fielddetails>
                                                                                </items>
                                                                            </column>
                                                                        </items>
                                                                    </field>
                                                                </fielddetails>
                                                            </items>
                                                        </fielddetails>
                                                    </items>
                                                </field>
                                            </fielddetails>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
